rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Market listing photos: marketListings/{userId}/{filename}
    // Thumbnails: thumb_200_*.jpg, thumb_400_*.jpg (generated by Cloud Function)
    // Authenticated users can upload to their own folder; anyone can read
    match /marketListings/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
