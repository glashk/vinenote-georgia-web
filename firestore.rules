rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // VineNote Georgia â€” user-scoped access rules.
    // Deploy: firebase deploy --only firestore:rules

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwnerByResource() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    function isOwnerByRequest() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Users: user can read/write self; admin can read any
    match /users/{userId} {
      allow read: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow write: if isSignedIn() && request.auth.uid == userId;

      match /favorites/{listingId} {
        allow read, create, delete: if isSignedIn() && request.auth.uid == userId;
      }

      match /pushTokens/{tokenId} {
        allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Finance
    match /finance/{financeId} {
      allow create: if isOwnerByRequest();
      allow read: if isOwnerByResource();
      allow update: if isOwnerByResource() && request.resource.data.userId == request.auth.uid;
      allow delete: if isOwnerByResource();
    }

    // App collections (vineyards, tasks, harvests, etc.)
    match /vineyards/{id}      { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /vineyardBlocks/{id} { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /tasks/{id}          { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /harvests/{id}       { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /containers/{id}     { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /wineBatches/{id}    { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /inventory/{id}      { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }
    match /entries/{id}        { allow create: if isOwnerByRequest(); allow read, update, delete: if isOwnerByResource(); }

    // Market listings: public read; owner create/update/delete; admin can moderate
    match /marketListings/{id} {
      allow read: if true;
      allow create: if isOwnerByRequest();
      allow update, delete: if isOwnerByResource() || isAdmin();
    }

    // Reports: moderation (App Store 1.2 safety)
    match /reports/{reportId} {
      allow create: if isSignedIn()
        && request.resource.data.reporterId == request.auth.uid;
      allow read: if (isSignedIn() && resource.data.reporterId == request.auth.uid) || isAdmin();
      allow update, delete: if isAdmin();
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
